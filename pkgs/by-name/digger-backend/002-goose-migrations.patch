+#!/usr/bin/env bash
+
+MIGRATIONS_DIR="./backend/migrations"
+OUTPUT_DIR="./backend/goose-migrations"
+
+# Create the output directory if it doesn't exist
+mkdir -p "$OUTPUT_DIR"
+
+# Loop through all .sql files in the migrations directory
+for file in "$MIGRATIONS_DIR"/*.sql; do
+  # Skip atlas.sum file
+  if [[ "$file" == *"atlas.sum" ]]; then
+    continue
+  fi
+
+  # Extract the filename
+  basename=$(basename "$file")
+
+  # Check if the filename already has a description part after underscore
+  if [[ "$basename" == *_* ]]; then
+    # Already has a description part, keep as is
+    new_filename="$basename"
+  else
+    # No description part, use the version number as the description
+    version=${basename%.sql}  # Remove .sql extension
+    new_filename="${version}_migration.sql"
+  fi
+
+  # Copy file to new location with Goose naming convention
+  cp "$file" "$OUTPUT_DIR/$new_filename"
+
+  # Check if file already contains Goose annotations
